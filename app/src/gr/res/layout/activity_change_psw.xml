<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <im.socks.yysk.PageBar
        android:id="@+id/title_bar"
        app:pb_back_text="修改密码"
        app:pb_back_show="true"
        style="@style/pager_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_xxl"
        android:paddingRight="@dimen/padding_xxl"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="修改密码"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_m"
                android:text="原有密码"/>

            <EditText
                android:id="@+id/txv_psw_orgin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_ml"
                android:layout_marginLeft="@dimen/padding_l"
                android:background="@color/transparent"
                android:textSize="@dimen/text_m"
                android:hint="初始密码"
                android:text=""/>

        </LinearLayout>

        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_m"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_m"
                android:text="新的密码"/>

            <EditText
                android:id="@+id/txv_psw_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_l"
                android:layout_marginLeft="@dimen/padding_l"
                android:background="@color/transparent"
                android:textSize="@dimen/text_m"
                android:inputType="textPassword"
                android:hint="请输入登录密码"
                android:text=""/>

        </LinearLayout>

        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_m"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_m"
                android:text="确认密码"/>

            <EditText
                android:id="@+id/txv_psw_repeat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_l"
                android:layout_marginLeft="@dimen/padding_l"
                android:background="@color/transparent"
                android:textSize="@dimen/text_m"
                android:inputType="textPassword"
                android:hint="请输入登录密码"
                android:text=""/>

        </LinearLayout>

        <include layout="@layout/line"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xl"
            android:background="@color/blue"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_ml"
            android:text="完成"/>

    </LinearLayout>

</LinearLayout>