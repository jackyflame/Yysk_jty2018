<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <im.socks.yysk.PageBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pb_back="true"
        app:pb_title="登录"></im.socks.yysk.PageBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_xxl"
        android:paddingRight="@dimen/padding_xxl"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_xl"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="账号登录"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/phoneNumberView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_l"
        android:drawableLeft="@mipmap/ic_user"
        android:drawablePadding="@dimen/padding_m"
        android:textSize="@dimen/text_ml"
        android:hint="请输入手机号"
        android:text=""/>

    <EditText
        android:id="@+id/passwordView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_l"
        android:drawableLeft="@mipmap/ic_psw"
        android:drawablePadding="@dimen/padding_m"
        android:layout_marginTop="@dimen/padding_m"
        android:textSize="@dimen/text_ml"
        android:inputType="textPassword"
        android:hint="请输入登录密码"
        android:text=""/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_l"
        android:background="@color/blue"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_l"
        android:text="登录"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/blue"
            android:text="注册账号"
            />

        <TextView
            android:id="@+id/forgetPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue"
            android:text="找回密码"
            />

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>