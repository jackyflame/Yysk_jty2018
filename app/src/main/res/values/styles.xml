<resources>

    <!-- Base application theme. -->

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <!-- -->

        <item name="pageBarStyle">@style/PageBarStyle</item>
    </style>
    <style name="AppThemeBase.NoActionBar" parent="AppThemeBase">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeBase.FullScreen" parent="AppThemeBase">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="PageBarStyle">
        <item name="pb_backgroundColor">?attr/colorPrimary</item>
        <item name="pb_textSize">20sp</item>
        <item name="pb_backTextSize">16sp</item>
        <item name="pb_textColor">#ffffff</item>
    </style>

    <style name="my_row_lin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="my_row_item_rl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="my_row_item_txv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_l</item>
        <item name="android:paddingBottom">@dimen/padding_l</item>
        <item name="android:drawablePadding">@dimen/padding_m</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_ml</item>
    </style>

    <style name="my_row_item" parent="my_row_item_txv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_white_shap_cnr_15</item>
    </style>

    <style name="buy_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/item_height_l</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/padding_l</item>
        <item name="android:paddingBottom">@dimen/padding_l</item>
        <item name="android:background">@drawable/buy_tab_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_ml</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="pager_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="pb_backgroundColor">@color/transparent</item>
        <item name="pb_back_show">false</item>
        <item name="pb_back">true</item>
        <item name="pb_textColor">@color/black</item>
        <item name="pb_backTextSize">@dimen/text_l</item>
    </style>

</resources>

